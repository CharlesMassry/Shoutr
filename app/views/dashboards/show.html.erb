<div class="sidebar">
<div class="super">
  <h3 class="black box">@<%= current_user.username %></h3>
</div>

<div class="super">
  <div class="blue box">
    <h4 class="black">Shouts!!</h4>
    <h4><%= current_user.shouts.size  %></h4>
  </div>
</div>

<%= render "shouts/form", shout: @shout %>
</div>

<div class="middle">
  <%= render @shouts %>
</div>

<div class="right-side">
  <div class="following">
    Following: <%= render current_user.followed_users %>
  </div>
  <div class="followers">
    Followers: <%= render current_user.followers %>
  </div>
</div>
