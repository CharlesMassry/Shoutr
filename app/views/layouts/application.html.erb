<!DOCTYPE html>
<html>
<head>
  <title>Shoutr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar">
<% if signed_in? %>
  Welcome <%= current_user.username %>
  <span class="sign_out"><%= link_to "Sign out", session_path, method: :delete %></span>
  <div>
    <%= render "search" %>
  </div>
<% end %>
</nav>

<%= yield %>

</body>
</html>
